<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/card_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="8dp"
        android:layout_margin="@dimen/three"
        app:cardCornerRadius="@dimen/eight"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/lyt_login_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_profile2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_no_item"
                     />

                <RelativeLayout
                    android:id="@+id/item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/img_profile2"
                    android:layout_toRightOf="@+id/img_profile2">

                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/menu"
                        android:textColor="@color/colorText"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvItemName"
                        android:layout_marginBottom="6dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlue"
                        android:text="99" />

                    <TextView
                        android:id="@+id/tvItemExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvItemPrice"
                        android:layout_marginBottom="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:paddingEnd="6dp"
                        android:paddingRight="6dp"
                        android:text="Your monthly subscription"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@+id/item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_change_my_timing"
                        android:textColor="@color/colorWhite"
                        android:paddingTop="5dp"
                        android:layout_margin="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/tv_change_time"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="@dimen/three"
                        android:textColor="@color/colorGreyDark"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="@string/change_my_timing" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_pause_myorder"
                        android:textColor="@color/colorWhite"
                        android:paddingTop="5dp"
                        android:layout_margin="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Pause for next day" />

                    <TextView
                        android:id="@+id/tv_pause_for_next_day"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="@dimen/three"
                        android:textColor="@color/colorGreyDark"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Pause" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
