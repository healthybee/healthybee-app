<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/parent_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/parent_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="2dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="4dp"
                card_view:cardElevation="8sp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/album_cover_height"
                        android:clickable="true"
                        android:contentDescription="@string/todo"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_no_item" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="@dimen/spacing_middle"
                        android:text="Veg Grill Sandwich with Cheese"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:drawableTint="@color/colorGrey"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Rs.120.00"
                            android:textSize="@dimen/text_size_12" />

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/offer_applied_menu_screen" />

                        <TextView
                            android:id="@+id/tv_new_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:drawableTint="@color/colorBlue"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Rs.99.00/Meal"
                            android:textColor="@color/colorBlue"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAddItem"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/parent_relative"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:background="@drawable/button_background_white"
            android:gravity="center"
            android:text="Add Item"
            android:textColor="@color/add_item_text_color"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/llAddRemove"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/parent_relative"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:background="@drawable/button_background_orange"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="7">

            <ImageView
                android:id="@+id/tvMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:contentDescription="@string/todo"
                android:gravity="center"
                android:src="@drawable/ic_remove_white_24dp"/>

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLength="3"
                android:text="101"
                android:textColor="@color/colorWhite"/>

            <ImageView
                android:id="@+id/tvPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:contentDescription="@string/todo"
                android:gravity="center"
                android:src="@drawable/ic_add_white_24dp" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>